<?xml version="1.0" encoding="UTF-8"?>
<persistence
  xmlns="http://java.sun.com/xml/ns/persistence"
  version="1.0">
  <persistence-unit
    name="my-persistence-unit"
    transaction-type="JTA">
    <provider>
    my-persistence-provider
    </provider>
    <jta-data-source>
    my-jta-datasource
    </jta-data-source>
    <non-jta-data-source>
    my-nojta-datasource
    </non-jta-data-source>
    <properties>
      <property
        name="myproperty"
        value="myvalue" />
    </properties>
  </persistence-unit>
</persistence>

