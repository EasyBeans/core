  <implementation class="org.ow2.easybeans.osgi.component.jmx.JmxComponentServiceFactory" />

  <service>
    <provide interface="org.osgi.service.cm.ManagedServiceFactory" />
  </service>
  
  <reference name="commonsModelerExtService"
             cardinality="1..1"
             interface="org.ow2.util.jmx.api.ICommonsModelerExtService"
             policy="static"
             bind="setCommonsModelerExtService"
             unbind="unsetCommonsModelerExtService" />

</component>
