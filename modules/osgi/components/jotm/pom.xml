<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.ow2.easybeans.osgi</groupId>
    <artifactId>easybeans-components</artifactId>
    <version>2.0.0-M2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ow2.easybeans.osgi</groupId>
  <artifactId>easybeans-component-jotm</artifactId>
  <packaging>bundle</packaging>
  <name>EasyBeans/OSGi :: Components :: JOTM</name>
  <description>OSGi Wrapper for the EasyBeans JOTM component</description>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>org.ow2.easybeans.component.jotm</Bundle-SymbolicName>
            <Import-Package><![CDATA[
            javax.transaction;version=1.1.0,
            javax.transaction.xa;version=1.1.0,
            org.apache.commons.logging.*,
            org.objectweb.carol.jndi.spi
            ]]>
            </Import-Package>
            <Export-Package><![CDATA[
            org.ow2.easybeans.component.jotm,
            org.objectweb.jotm;-split-package:=merge-first,
            org.objectweb.jotm.jta.rmi,
            org.objectweb.jotm.jta.jeremie,
            org.objectweb.transaction.jta]]>
            </Export-Package>
            <DynamicImport-Package>*</DynamicImport-Package>
            <Private-Package />
            <Embed-StripGroup>true</Embed-StripGroup>
            <Embed-Directory>dependencies</Embed-Directory>
            <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
            <Service-Component><![CDATA[OSGI-INF/jotm-component-factory.xml]]></Service-Component>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.ow2.easybeans.osgi</groupId>
      <artifactId>easybeans-modules-core</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.ow2.easybeans</groupId>
      <artifactId>easybeans-component-jotm</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>howl</groupId>
      <artifactId>howl-logger</artifactId>
      <version>0.1.11</version>
    </dependency>
    <dependency>
      <groupId>org.ow2.jotm</groupId>
      <artifactId>jotm-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.ow2.jotm</groupId>
      <artifactId>jotm-interceptor-jrmp</artifactId>
    </dependency>
  </dependencies>
</project>
